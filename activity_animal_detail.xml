<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/animalNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/animalSpeciesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/animalInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggested Treatment"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <!-- Button to navigate to final prediction page -->
        <Button
            android:id="@+id/viewPredictionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Prediction"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
