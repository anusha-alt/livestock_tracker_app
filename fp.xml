<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/predictionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🐾 Health Prediction Report"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="20dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="4dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/predictionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prediction details will appear here"
                android:textSize="18sp"
                android:textColor="#444444"
                android:lineSpacingExtra="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recommended Actions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/recommendationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advice from prediction model will show here."
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:layout_marginTop="12dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#2C3E50"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp" />

    </LinearLayout>
</ScrollView>