<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/transparent">

    <!-- Service Card Template -->
    <!-- 1. Vaccination -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_pattern"
            android:padding="16dp">

            <ImageView
                android:id="@+id/serviceIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_vaccine"
                android:contentDescription="@string/service_icon_desc" />

            <TextView
                android:id="@+id/serviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaccination"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_gravity="center" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 2. Milk Yield Monitoring -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_pattern"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_milk"
                android:contentDescription="@string/service_icon_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milk Yield Monitoring"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_gravity="center" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 3. Hoof Trimming -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_pattern"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_trim"
                android:contentDescription="@string/service_icon_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoof Trimming"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_gravity="center" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 4. Diet Planning -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_pattern"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_diet"
                android:contentDescription="@string/service_icon_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diet Planning"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_gravity="center" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- 5. Health Check -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="12dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animal_pattern"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/ic_health_check"
                android:contentDescription="@string/service_icon_desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Check"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:shadowColor="#FFFFFF"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_gravity="center" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

